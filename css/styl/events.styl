.event-list {
  margin-left: -36px;
  padding: 0;

  font-size: 0;
  list-style: none;

  li {
    display: inline-block;
    width: 50%;
    margin-bottom: 36px;
    padding-left: 36px;

    font-size: 16px;
    vertical-align: top;
  }
}

.event {
  position: relative;

  padding: 0 0 12px;
  border: 1px solid #ddd;
  border-bottom: 0;

  background-image: linear-gradient(to bottom, rgba(0,0,0,0.04), rgba(255,255,255,0));

  &:before,
  &:after {
    content: "";
    position: absolute;
    top: -1px;
    right: -1px;

    border: 24px solid transparent;
    border-top-color: #ddd;
    border-right-color: #ddd;
  }

  &:after {
    top: -2px;

    border-top-color: #fafafa;
    border-right-color: #fafafa;
  }
}

.event-section {
  padding: 0 16px
}

.event-title {
  padding: 13px 42px 10px 16px;
  border-bottom: 1px solid #ddd;

  font-size: 18px;
  line-height: 1.3;
}

.event-time {
  position: relative;

  display: block;
  margin: 0 -8px 16px;
  padding: 6px 16px;
  border: 1px solid darken($green, 10%);

  background: $green;
  color: $white;
  font-size: 16px;
  text-shadow: 0 -1px 0 rgba(0,0,0,0.2);

  &:before,
  &:after {
    content: "";
    position: absolute;
    top: 100%;
    left: -2px;

    margin-top: 1px;
    border: 4px solid transparent;
    border-right-color: darken($green, 25%);
    border-top-color: darken($green, 25%);
  }

  &:after {
    right: -1px;
    left: auto;

    border-right-color: transparent;
    border-left-color: darken($green, 25%);
  }
}

.event-attendance {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  float: right;
  height: 38px;
  margin: 0 0 0 24px;

  text-align: right;
}

.event-waitlist {
  display: block;

  font-size: 13px;
  line-height: 1.2;
}

.event-location {
  overflow: hidden;
  margin-bottom: 16px;
}

.event-location-content {
  margin: 0;

  font-size: 13px;
}

.event-description {
  margin-bottom: 24px;

  font-size: 13px;
}
